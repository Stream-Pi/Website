{
  "name": "streampi-website",
  "version": "2.0.0",
  "author": "Samuel Qui√±ones",
  "description": "The official Stream-Pi website",
  "repository": {
    "type": "git",
    "url": "https://github.com/stream-pi/website"
  },
  "bugs": {
    "url": "https://github.com/stream-pi/website/issues"
  },
  "config": {
    "static_out": "out"
  },
  "scripts": {
    "dev": "next dev",
    "dev:debug": "NODE_OPTIONS='--inspect' next dev",
    "build": "npm run clean && next build",
    "build:full": "npm run build && npm run export",
    "export": "cross-env-shell \"next export -o $npm_package_config_static_out\"",
    "start": "next start -p 8080",
    "start:dev": "next start -p 3012",
    "start:static": "cross-env-shell \"serve $npm_package_config_static_out\"",
    "clean": "npm run clean:next && npm run clean:static",
    "clean:next": "rimraf .next",
    "clean:static": "cross-env-shell \"rimraf $npm_package_config_static_out\"",
    "clean:light": "cross-env-shell \"rimraf .next/* && rimraf $npm_package_config_static_out/*\"",
    "eslint": "eslint --ext js,tx,tsx",
    "stylelint": "stylelint \"src/assets/styles/**/*.{css,scss,sass}\"",
    "lint": "npm run eslint src && npm run stylelint",
    "lint:fix": "npm run eslint -- --fix src && npm run stylelint -- --fix",
    "pretty:check": "prettier --check .",
    "pretty:fix": "prettier --write .",
    "update-release:server": "node ./.scripts/updateRecentRelease.js server && prettier --write ./src/helpers/InstallHelper/server.ts",
    "update-release:client": "node ./.scripts/updateRecentRelease.js client && prettier --write ./src/helpers/InstallHelper/client.ts",
    "update-release:all": "npm run update-release:server && npm run update-release:client",
    "preinstall": "node ./.scripts/nodeVersionCheck.js && node ./.scripts/npmVersionCheck.js",
    "create-env": "node ./.scripts/createLocalEnv.js"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.35",
    "@fortawesome/free-brands-svg-icons": "^5.15.3",
    "@fortawesome/free-regular-svg-icons": "^5.15.3",
    "@fortawesome/free-solid-svg-icons": "^5.15.3",
    "@fortawesome/react-fontawesome": "^0.1.14",
    "animate.css": "^4.1.1",
    "axios": "^0.21.1",
    "bootstrap": "^4.6.0",
    "dayjs": "^1.10.4",
    "formik": "^2.2.6",
    "gray-matter": "^4.0.2",
    "next": "10.0.9",
    "node-sass": "^5.0.0",
    "nodemailer": "^6.5.0",
    "react": "17.0.2",
    "react-bootstrap": "^1.5.2",
    "react-dom": "17.0.2",
    "react-google-recaptcha": "^2.1.0",
    "react-toastify": "^7.0.3",
    "remark": "^13.0.0",
    "remark-gfm": "^1.0.0",
    "remark-highlight.js": "^6.0.0",
    "remark-html": "^13.0.1",
    "remark-slug": "^6.0.0",
    "yup": "^0.32.9"
  },
  "devDependencies": {
    "@types/node": "^14.14.35",
    "@types/nodemailer": "^6.4.1",
    "@types/react": "^17.0.3",
    "@types/react-google-recaptcha": "^2.1.0",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.23.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "prettier": "2.2.1",
    "rimraf": "^3.0.2",
    "serve": "^11.3.2",
    "stylelint": "^13.12.0",
    "stylelint-config-recommended": "^4.0.0",
    "stylelint-config-standard": "^21.0.0",
    "typescript": "^4.2.3"
  }
}
